<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cvic.wallpapermanager">

    <uses-feature
        android:name="android.software.live_wallpaper"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".WallpaperManager">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AlbumablePreviewActivity"
            android:parentActivityName=".WallpaperManager" />

        <service
            android:name=".service.WPMService"
            android:label="WallpaperService"
            android:permission="android.permission.BIND_WALLPAPER">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
        </service>

        <activity android:name=".SelectImagesActivity" />
        <activity
            android:name=".FolderIVA"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_image_view"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".AddImagesIVA"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_image_view"
            android:theme="@style/FullscreenTheme"/>
    </application>

</manifest>